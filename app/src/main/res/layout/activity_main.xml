<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/omikuji"
            android:layout_alignParentTop="true" android:id="@+id/start"
            android:layout_marginTop="175dp" android:layout_centerHorizontal="true"/>
    <TextView
            android:text="おみくじをひく！"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true" android:id="@+id/textView"
            android:layout_marginTop="86dp" android:layout_centerHorizontal="true" android:textSize="24sp"
            android:textStyle="bold" android:textAlignment="center" android:textColor="#F44336"/>
</RelativeLayout>